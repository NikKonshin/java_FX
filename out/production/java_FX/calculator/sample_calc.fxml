<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:controller="calculator.Controller"
            xmlns:fx="http://javafx.com/fxml">
    <stylesheets>
        <URL value="@/css/style_calc.css"/>
    </stylesheets>
    <top>
        <HBox >
            <TextField fx:id="textField" promptText="Введите сообщение" translateY="7" translateX="7" prefWidth="297"/>
        </HBox>

    </top>
    <center>
        <GridPane hgap="10" vgap="10" translateX="7" translateY="14" >
            <Button text="7" GridPane.columnIndex="0" GridPane.rowIndex="0" prefHeight="50" prefWidth="70" onAction="#readProcessing"/>
            <Button text="8" GridPane.columnIndex="1" GridPane.rowIndex="0" prefHeight="50" prefWidth="70" onAction="#readProcessing"/>
            <Button text="9" GridPane.columnIndex="2" GridPane.rowIndex="0" prefHeight="50" prefWidth="70" onAction="#readProcessing"/>
            <Button text="4" GridPane.columnIndex="0" GridPane.rowIndex="1" prefHeight="50" prefWidth="70" onAction="#readProcessing"/>
            <Button text="5" GridPane.columnIndex="1" GridPane.rowIndex="1" prefHeight="50" prefWidth="70" onAction="#readProcessing"/>
            <Button text="6" GridPane.columnIndex="2" GridPane.rowIndex="1" prefHeight="50" prefWidth="70" onAction="#readProcessing"/>
            <Button text="1" GridPane.columnIndex="0" GridPane.rowIndex="2" prefHeight="50" prefWidth="70" onAction="#readProcessing"/>
            <Button text="2" GridPane.columnIndex="1" GridPane.rowIndex="2" prefHeight="50" prefWidth="70" onAction="#readProcessing"/>
            <Button text="3" GridPane.columnIndex="2" GridPane.rowIndex="2" prefHeight="50" prefWidth="70" onAction="#readProcessing"/>
            <Button text="C" fx:id="btnC" GridPane.columnIndex="0" GridPane.rowIndex="3" prefHeight="50" prefWidth="70" onAction="#readProcessing"/>
            <Button text="0" GridPane.columnIndex="1" GridPane.rowIndex="3" prefHeight="50" prefWidth="70" onAction="#readProcessing"/>
            <Button text="=" fx:id="btnEql" GridPane.columnIndex="2" GridPane.rowIndex="3" prefHeight="50" prefWidth="70" onAction="#readProcessing"/>

        </GridPane>
    </center>
    <right>
        <VBox spacing="10" translateX="-7" translateY="14">
            <Button text="/" fx:id="btnDel" prefHeight="50" prefWidth="60" onAction="#readProcessing"/>
            <Button text="*" fx:id="btnMul" prefHeight="50" prefWidth="60" onAction="#readProcessing"/>
            <Button text="-" fx:id="btnSubtraction" prefHeight="50" prefWidth="60" onAction="#readProcessing"/>
            <Button text="+" fx:id="btnSumm" prefHeight="50" prefWidth="60" onAction="#readProcessing"/>
        </VBox>

    </right>

</BorderPane>